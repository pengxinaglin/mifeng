<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white"
    >

  <TextView
      android:id="@+id/tv_sort_item"
      android:layout_width="match_parent"
      android:layout_height="@dimen/px_55dp"
      android:background="@drawable/common_selector_click"
      android:paddingLeft="@dimen/px_20dp"
      android:gravity="center_vertical"
      android:textSize="@dimen/ip5_28px"
      android:textColor="@color/common_text_gray"
      />
  <ImageView
      android:id="@+id/iv_sort_item"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_marginRight="@dimen/px_20dp"
      android:layout_centerVertical="true"
      android:visibility="gone"
      android:src="@drawable/icon_filter_choose"
      />
  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/px_05dp"
      android:layout_alignParentBottom="true"
      android:background="@color/common_line"
      />

</RelativeLayout>