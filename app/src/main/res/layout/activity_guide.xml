<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <android.support.v4.view.ViewPager
      android:id="@+id/vg_guide"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />
  <TextView
      android:id="@+id/tv_guide_go"
      android:layout_width="match_parent"
      android:layout_height="@dimen/px_44dp"
      android:layout_gravity="bottom"
      android:layout_marginLeft="@dimen/px_70dp"
      android:layout_marginRight="@dimen/px_70dp"
      android:layout_marginBottom="@dimen/px_60dp"
      android:text="@string/immediately_experience"
      android:textColor="@color/common_white"
      android:textSize="@dimen/ip5_36px"
      android:gravity="center"
      android:background="@drawable/common_bg_yellow_button"
      android:visibility="gone"
      />

</FrameLayout>  