<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
  <RelativeLayout
      android:id="@+id/rel_choose_parent"
      android:layout_width="match_parent"
      android:layout_height="@dimen/px_45dp"
      android:background="@color/common_white"
      android:paddingLeft="@dimen/px_15dp"
      android:paddingRight="@dimen/px_15dp"
      android:visibility="gone"
      >
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/px_10dp"
        android:layout_marginBottom="@dimen/px_5dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        >
      <LinearLayout
          android:id="@+id/linear_filter_choose"
          android:orientation="horizontal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          />
    </HorizontalScrollView>
  </RelativeLayout>
</RelativeLayout>