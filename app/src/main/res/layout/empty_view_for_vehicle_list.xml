<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <LinearLayout
      android:id="@+id/linear_empty_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:clickable="false"
      android:gravity="center"
      android:visibility="gone"
      android:layout_marginTop="@dimen/px_100dp"
      android:background="@color/common_bg_gray"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ip5_34px"
        android:textColor="@color/common_text_black"
        android:drawableTop="@drawable/icon_bee_fail"
        android:text="@string/bee_no_data"
        android:drawablePadding="@dimen/px_10dp"
        />

  </LinearLayout>
</FrameLayout>