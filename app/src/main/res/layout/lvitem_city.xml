<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_brand_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <LinearLayout
      android:id="@+id/linear_city_item"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/common_bg_gray"
      android:orientation="vertical"
      >
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_05dp"
        android:background="@color/common_line"
        />
    <TextView
        android:id="@+id/city_letter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_48dp"
        android:layout_marginTop="@dimen/px_5dp"
        android:textSize="@dimen/ip5_28px"
        android:background="@color/common_white"
        android:textColor="@color/common_text_black"
        android:paddingTop="@dimen/px_5dp"
        android:paddingLeft="@dimen/px_20dp"
        android:gravity="center_vertical"
        android:text="@string/city_letter"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_05dp"
        android:background="@color/common_line"
        />
  </LinearLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/linear_city_item"
      >
    <TextView
        android:id="@+id/city_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_55dp"
        android:paddingLeft="@dimen/px_20dp"
        android:background="@drawable/common_selector_click"
        android:gravity="center_vertical"
        android:textColor="@color/common_text_black"
        android:textSize="@dimen/ip5_28px"
        android:text="@string/city_choose"
        />

    <View
        android:id="@+id/city_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_05dp"
        android:layout_marginLeft="@dimen/px_20dp"
        android:background="@color/common_line"
        android:layout_below="@id/city_name"
        />
  </RelativeLayout>

</RelativeLayout>