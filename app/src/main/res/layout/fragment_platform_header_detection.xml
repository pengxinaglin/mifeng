<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/px_15dp"
    android:orientation="vertical"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
    <View
        android:layout_width="@dimen/px_3dp"
        android:layout_height="@dimen/px_17dp"
        android:layout_marginTop="@dimen/px_2dp"
        android:background="@color/common_yellow"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_10dp"
        android:textSize="@dimen/ip5_34px"
        android:textColor="@color/common_text_black"
        android:text="@string/platform_detection"
        />
  </LinearLayout>
  <TextView
      android:id="@+id/tv_platform_detection"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/px_25dp"
      android:layout_marginLeft="@dimen/px_13dp"
      android:textSize="@dimen/ip5_28px"
      android:textColor="@color/common_text_black"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/px_05dp"
      android:layout_marginTop="@dimen/px_22dp"
      android:background="@color/common_line"
      />

</LinearLayout>