<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg_gray"
    >
  <RelativeLayout
      android:id="@+id/rel_filter_series_top"
      android:layout_width="match_parent"
      android:layout_height="@dimen/px_44dp"
      android:background="@color/common_white"
      >
    <ImageView
        android:id="@+id/iv_filter_series_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_44dp"
        android:contentDescription="@null"
        style="@style/bee_filter_top_close"
        android:src="@drawable/icon_filter_return"
        />
    <TextView
        android:id="@+id/tv_filter_series_top_title"
        style="@style/bee_filter_top_title_hint"
        android:visibility="gone"
        android:layout_toRightOf="@id/iv_filter_series_back"
        android:text="@string/filter_series"
        />
    <View
        android:id="@+id/v_filter_series_top_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_05dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@color/common_line"
        />
  </RelativeLayout>
  <ListView
      android:id="@+id/lv_car_series"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:divider="@null"
      android:listSelector="@drawable/common_selector_click"
      android:overScrollMode="never"
      android:scrollbars="none"
      />
</LinearLayout>