<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:orientation="vertical"
    >

  <TextView
      style="@style/bee_filter_title_hint"
      android:text="@string/filter_series"
      />
  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/px_05dp"
      android:background="@color/common_line"
      />

  <RelativeLayout
      android:id="@+id/rel_all_series"
      android:layout_width="match_parent"
      android:layout_height="@dimen/px_55dp"
      android:background="@drawable/common_selector_click"
      >
    <TextView
        android:id="@+id/tv_all_series"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_55dp"
        android:clickable="false"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px_20dp"
        android:text="@string/filter_all_series"
        android:textSize="@dimen/ip5_28px"
        android:textColor="@color/common_text_black"
        />
    <ImageView
        android:id="@+id/iv_all_series_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:contentDescription="@null"
        android:layout_marginRight="@dimen/px_25dp"
        android:src="@drawable/icon_filter_choose"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
  </RelativeLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/px_05dp"
      android:background="@color/common_line"
      />
  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/px_5dp"
      android:background="@color/common_bg_gray"
      />

</LinearLayout>