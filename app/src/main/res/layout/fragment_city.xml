<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <RelativeLayout
      android:id="@+id/rel_city_top"
      android:layout_width="match_parent"
      android:layout_height="@dimen/px_44dp"
      android:background="@color/common_white"
      >
    <ImageView
        android:id="@+id/iv_city_close"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_44dp"
        android:contentDescription="@null"
        style="@style/bee_filter_top_close"
        android:src="@drawable/icon_filter_return"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:textColor="@color/common_text_black"
        android:textSize="@dimen/ip5_40px"
        android:gravity="center"
        android:text="@string/city_choose"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_05dp"
        android:layout_alignParentBottom="true"
        android:background="@color/common_line"
        />
  </RelativeLayout>

  <FrameLayout
      android:id="@+id/frame_city_parent"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/common_white"
      >
    <ListView
        android:id="@+id/lv_city_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:cacheColorHint="@color/bee_transparent_color"
        android:listSelector="@color/bee_transparent_color"
        android:focusable="true"
        android:divider="@null"
        android:overScrollMode="never"
        android:scrollbars="none"
        />

    <TextView
        android:id="@+id/tv_toast_city"
        android:layout_width="@dimen/px_90dp"
        android:layout_height="@dimen/px_90dp"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/px_5dp"
        android:paddingRight="@dimen/px_5dp"
        android:paddingBottom="@dimen/px_10dp"
        android:background="@drawable/icon_side_bar"
        android:gravity="center"
        android:textColor="@color/common_text_black"
        android:textSize="@dimen/ip5_80px"
        android:visibility="invisible"
        />

    <com.haoche51.bee.custom.SideBar
        android:id="@+id/side_bar_city"
        android:layout_width="@dimen/px_20dp"
        android:layout_height="@dimen/px_480dp"
        android:layout_marginBottom="@dimen/px_30dp"
        android:background="@color/bee_half_transparent_white"
        android:layout_gravity="end|bottom"
        />
  </FrameLayout>
</LinearLayout>