<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="afterDescendants"
    >
  <LinearLayout
      android:id="@+id/linear_filter_brand_item"
      android:layout_width="match_parent"
      android:layout_height="@dimen/px_77dp"
      android:layout_margin="@dimen/px_2p5dp"
      android:background="@drawable/common_bg_gray"
      android:gravity="center"
      >
    <TextView
        android:id="@+id/tv_filter_brand_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/empty_brand"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:text="@string/filter_brand"
        android:textColor="@color/common_text_black"
        android:textSize="@dimen/ip5_28px"
        />
  </LinearLayout>

</RelativeLayout>