<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_price_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg_gray"
    >
  <FrameLayout
      android:id="@+id/frame_filter_price_top"
      android:layout_width="match_parent"
      android:layout_height="@dimen/px_44dp"
      android:background="@color/common_white"
      >
    <ImageView
        android:id="@+id/iv_filter_price_close"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_44dp"
        android:contentDescription="@null"
        style="@style/bee_filter_top_close"
        />
  </FrameLayout>

  <TextView
      style="@style/bee_filter_title_hint"
      android:text="@string/filter_price"
      />
  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/px_05dp"
      android:background="@color/common_line"
      />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/px_55dp"
      >
    <TextView
        android:id="@+id/tv_all_price"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_55dp"
        android:clickable="false"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px_20dp"
        android:text="@string/filter_all_price"
        android:textSize="@dimen/ip5_34px"
        android:textColor="@color/common_text_black"
        android:background="@drawable/common_selector_click"
        />
    <ImageView
        android:id="@+id/iv_all_price_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:contentDescription="@null"
        android:layout_marginRight="@dimen/px_25dp"
        android:src="@drawable/icon_filter_choose"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
  </RelativeLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/px_05dp"
      android:background="@color/common_line"
      />

  <TextView
      style="@style/bee_filter_item_hint"
      android:text="@string/filter_choose_price"
      android:layout_marginTop="@dimen/px_5dp"
      />


  <com.haoche51.bee.custom.BeeGridView
      android:id="@+id/gv_price_main"
      style="@style/bee_filter_gv"
      android:paddingBottom="@dimen/px_12dp"
      android:numColumns="3"
      />
  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/px_05dp"
      android:background="@color/common_line"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginTop="@dimen/px_5dp"
      android:paddingBottom="@dimen/px_20dp"
      android:background="@color/common_white"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_50dp"
        >
      <TextView
          android:id="@+id/tv_custom_price_hint"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:textColor="@color/common_text_black"
          android:paddingLeft="@dimen/px_20dp"
          android:textSize="@dimen/ip5_34px"
          android:gravity="center_vertical"
          android:text="@string/filter_price_custom"
          />
      <TextView
          android:id="@+id/tv_sb_price_hint"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_alignParentRight="true"
          android:paddingRight="@dimen/px_20dp"
          android:textSize="@dimen/ip5_28px"
          android:textColor="@color/common_text_black"
          android:gravity="center_vertical"
          android:text="@string/filter_all_price"
          />
    </RelativeLayout>
    <com.haoche51.bee.custom.SeekBarPressure
        android:id="@+id/sb_filter_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/px_20dp"
        android:paddingRight="@dimen/px_20dp"
        />
    <TextView
        android:id="@+id/tv_seek_bar_ensure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_44dp"
        android:layout_marginLeft="@dimen/px_90dp"
        android:layout_marginRight="@dimen/px_90dp"
        android:layout_marginTop="@dimen/px_15dp"
        android:visibility="gone"
        android:background="@drawable/common_bg_yellow_button"
        android:textColor="@color/common_text_black"
        android:textSize="@dimen/ip5_34px"
        android:text="@string/filter_price_ensure"
        android:gravity="center"
        />
  </LinearLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/px_05dp"
      android:background="@color/common_line"
      />
</LinearLayout>