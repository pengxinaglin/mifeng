<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_brand_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <LinearLayout
      android:id="@+id/linear_brand_item"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/common_bg_gray"
      android:orientation="vertical"
      >
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_05dp"
        android:background="@color/common_line"
        />
    <TextView
        android:id="@+id/brand_letter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_48dp"
        android:layout_marginTop="@dimen/px_5dp"
        android:textSize="@dimen/ip5_28px"
        android:background="@color/common_white"
        android:textColor="@color/common_text_black"
        android:paddingTop="@dimen/px_5dp"
        android:paddingLeft="@dimen/px_20dp"
        android:gravity="center_vertical"
        android:text="@string/filter_letter"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_05dp"
        android:background="@color/common_line"
        />
  </LinearLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/linear_brand_item"
      >
    <TextView
        android:id="@+id/brand_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_55dp"
        android:paddingLeft="@dimen/px_20dp"
        android:background="@drawable/common_selector_click"
        android:drawableLeft="@drawable/empty_brand"
        android:drawablePadding="@dimen/px_10dp"
        android:gravity="center_vertical"
        android:textColor="@color/common_text_black"
        android:textSize="@dimen/ip5_28px"
        android:text="@string/filter_brand"
        />
    <ImageView
        android:id="@+id/iv_brand_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:visibility="gone"
        android:src="@drawable/icon_filter_choose"
        android:layout_marginRight="@dimen/px_25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

    <View
        android:id="@+id/brand_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_05dp"
        android:background="@color/common_line"
        android:layout_below="@id/brand_name"
        />
  </RelativeLayout>

</RelativeLayout>