<resources>

  <!-- Base application theme. -->
  <style name="AppTheme"
      parent="@android:style/Theme.Light.NoTitleBar">
    <item name="android:windowAnimationStyle">@style/WindowAnimTheme</item>
  </style>

  <style name="WindowAnimTheme"
      parent="@android:style/Animation.Activity">
    <item name="android:activityOpenEnterAnimation">@anim/trans_in_right_left</item>
    <item name="android:activityOpenExitAnimation">@anim/anim_activity_main</item>
    <item name="android:activityCloseEnterAnimation">@anim/anim_activity_main</item>
    <item name="android:activityCloseExitAnimation">@anim/trans_out_left_right</item>
  </style>

  <style name="tab_style">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1.0</item>
    <item name="android:layout_gravity">bottom|center_vertical</item>
    <item name="android:button">@null</item>
    <item name="android:clickable">true</item>
    <item name="android:gravity">center_vertical|center_horizontal</item>
    <item name="android:textColor">@drawable/selector_tab_color</item>
    <item name="android:textSize">10sp</item>
    <item name="android:drawablePadding">1dp</item>
    <item name="android:paddingLeft">0dp</item>
  </style>

  <style name="bee_custom_toast_anim">
    <item name="@android:windowEnterAnimation">@anim/anim_custom_toast_in</item>
    <item name="@android:windowExitAnimation">@anim/anim_custom_toast_out</item>
  </style>

  <!-- 搜索的样式-->
  <style name="searchTheme"
      parent="@android:style/Theme.Light">
    <item name="android:windowNoTitle">true</item>
    <item name="android:dropDownListViewStyle">@style/AutoSpinnerStyle</item>
  </style>

  <style name="AutoSpinnerStyle"
      parent="android:style/Widget.Holo.ListView.DropDown">
    <item name="android:scrollbars">none</item>
    <item name="android:divider">@color/bee_transparent_color</item>
    <item name="android:dividerHeight">0dp</item>
  </style>

  <!-- 热门价格 -->
  <style name="hot_price_rb">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1.0</item>
    <item name="android:gravity">center_vertical|center_horizontal</item>
    <item name="android:paddingLeft">0dp</item>
    <item name="android:layout_marginTop">@dimen/px_05dp</item>
    <item name="android:layout_marginLeft">@dimen/px_05dp</item>
    <item name="android:textColor">@color/common_text_black</item>
    <item name="android:button">@null</item>
    <item name="android:textSize">@dimen/ip5_28px</item>
    <item name="android:background">@drawable/common_selector_click</item>
  </style>
</resources>
